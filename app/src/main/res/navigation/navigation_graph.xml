<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentMovieList"
        android:name="com.example.maktabplus.ui.mvoie_list.FragmentMovieList"
        android:label="FragmentMovieList"
        tools:layout="@layout/fragment_movie_list">

        <argument
            android:name="genre"
            app:argType="com.example.maktabplus.data.model.movie.Genre" />
        <action
            android:id="@+id/action_fragmentMovieList_to_fragmentMovieInfo"
            app:destination="@id/fragmentMovieInfo" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.maktabplus.ui.home.FragmentHome"
        android:label="FragmentHome"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragmentHome_to_fragmentMovieList"
            app:destination="@id/fragmentMovieList" />
        <action
            android:id="@+id/action_fragmentHome_to_fragmentMovieInfo"
            app:destination="@id/fragmentMovieInfo" />
    </fragment>
    <fragment
        android:id="@+id/fragmentMovieInfo"
        android:name="com.example.maktabplus.ui.movie_info.FragmentMovieInfo"
        android:label="FragmentMovieInfo" >
        <argument android:name="movie"
            app:argType="com.example.maktabplus.data.model.movie.Movie" />
        <action
            android:id="@+id/action_fragmentMovieInfo_self"
            app:destination="@id/fragmentMovieInfo" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.example.maktabplus.ui.search.FragmentSearch"
        android:label="FragmentSearch" >
        <action
            android:id="@+id/action_fragmentSearch_to_fragmentMovieInfo"
            app:destination="@id/fragmentMovieInfo" />
    </fragment>
</navigation>